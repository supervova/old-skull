{
  "name": "old-skull",
  "description": "CSS Framework | Anti-Tailwind and LLM assistants baked.",
  "version": "0.1.0",
  "author": {
    "name": "Vladimir Nikishin",
    "email": "vlaimir.nikishin@gmail.com",
    "url": "https://super-mark.ru/"
  },
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/main.css",
  "scripts": {
    "assets:build": "node scripts/build-assets.mjs",
    "build": "vite build",
    "build:docs": "vitepress build",
    "build:play": "vite build --root example --outDir example/dist --base /play/",
    "css:build": "postcss frontend/main.css -o dist/main.css",
    "css:dev": "postcss frontend/main.css --watch -o .cache/main.css --map",
    "dev": "vite",
    "format": "prettier --write 'frontend/**/*.{js,css,html}'",
    "lint:js": "eslint 'frontend/**/*.js'",
    "lint:styles": "stylelint 'frontend/**/*.css'",
    "postinstall": "node scripts/update-vscode-stylelint.js",
    "prebuild": "pnpm run assets:build",
    "preinstall": "npx only-allow pnpm",
    "preview:docs": "vitepress dev",
    "release": "changeset publish",
    "test": "vitest"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "ignoreFiles": [
      "frontend/components/progress/loader.css"
    ],
    "rules": {
      "alpha-value-notation": "number",
      "at-rule-empty-line-before": null,
      "at-rule-no-unknown": [true, { "ignoreAtRules": ["mixin", "define-mixin"] }],
      "at-rule-no-vendor-prefix": true,
      "color-named": "never",
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "stylelint-commands"
          ]
        }
      ],
      "custom-media-pattern": "^[a-z0-9-.]+$",
      "custom-property-empty-line-before": null,
      "declaration-empty-line-before": null,
      "declaration-no-important": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": [
        "numeric",
        {
          "ignore": [
            "relative"
          ]
        }
      ],
      "function-no-unknown": [
        true,
        {
          "ignoreFunctions": [
            "layer"
          ]
        }
      ],
      "function-url-no-scheme-relative": true,
      "function-url-quotes": "always",
      "hue-degree-notation": "number",
      "layer-name-pattern": "^[a-z0-9-.]+$",
      "length-zero-no-unit": [
        true,
        {
          "ignore": [
            "custom-properties"
          ]
        }
      ],
      "media-feature-name-no-unknown": [
        true,
        {
          "ignoreMediaFeatureNames": [
            "prefers-reduced-motion"
          ]
        }
      ],
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "no-duplicate-selectors": true,
      "no-empty-source": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "interpolate-size"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "rule-empty-line-before": null,
      "selector-attribute-quotes": "always",
      "selector-class-pattern": [
        "^[a-z0-9-_\\/:]+$",
        {
          "message": "Class names should only contain lowercase letters, numbers, hyphens, underscores (for BEM elements only), and may include forward slashes for fractions and colons."
        }
      ],
      "selector-max-attribute": 3,
      "selector-max-class": 4,
      "selector-max-combinators": 4,
      "selector-max-compound-selectors": 4,
      "selector-max-id": 0,
      "selector-max-specificity": null,
      "selector-max-universal": 1,
      "selector-no-qualifying-type": null,
      "selector-no-vendor-prefix": true,
      "value-keyword-case": [
        "lower",
        {
          "camelCaseSvgKeywords": true,
          "ignoreFunctions": [
            "color-mix"
          ],
          "ignoreKeywords": [
            "Arial",
            "Baskerville",
            "BlinkMacSystemFont",
            "Consolas",
            "Georgia",
            "Inter",
            "Menlo",
            "Monaco",
            "Roboto",
            "SFMono-Regular",
            "Times"
          ]
        }
      ],
      "value-no-vendor-prefix": true
    }
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-mixins": {},
      "postcss-custom-media": {},
      "postcss-custom-selectors": {},
      "postcss-nesting": {},
      "postcss-preset-env": {
        "stage": 2,
        "features": {
          "custom-properties": false,
          "is-pseudo-class": false,
          "cascade-layers": false,
          "case-insensitive-attributes": false
        }
      },
      "postcss-pxtorem": {
        "rootValue": 16,
        "propList": [
          "--font-size*",
          "!--font-size-doc",
          "--form-padding-y",
          "--letter-spacing*",
          "--padding-bottom*",
          "--padding-top*",
          "--dim*",
          "font",
          "font-size",
          "height",
          "inset",
          "letter-spacing",
          "line-height",
          "margin*",
          "max-height",
          "max-width",
          "min-height",
          "min-width",
          "padding*",
          "vertical-align",
          "width",
          "word-spacing"
        ],
        "selectorBlackList": [],
        "exclude": null,
        "mediaQuery": false,
        "minPixelValue": 0
      },
      "postcss-calc": {},
      "postcss-discard-comments": {}
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "jsxSingleQuote": false,
    "printWidth": 100,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "printWidth": 40000,
          "bracketSameLine": true
        }
      }
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead"
  ],
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^10.4.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "imagemin": "^9.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "postcss": "^8.4.38",
    "postcss-calc": "^10.1.1",
    "postcss-cli": "^11.0.1",
    "postcss-color-contrast": "^1.1.0",
    "postcss-csso": "^6.0.0",
    "postcss-custom-media": "^11.0.6",
    "postcss-custom-selectors": "^8.0.5",
    "postcss-discard-comments": "^7.0.4",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^12.1.2",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.0.2",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "svg-sprite": "^2.0.4",
    "vite": "^7.1.9",
    "vite-plugin-imagemin": "^0.6.1",
    "vitepress": "^1.2.3",
    "vitest": "^4.0.15"
  }
}
